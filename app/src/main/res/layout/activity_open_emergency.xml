<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.appxone.heartrateanimationapp.BraceletEmergency">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="15"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:lineSpacingExtra="5sp"
            android:text="Se ha enviado la orden al dispositivo. Pase la pulsera por el lector y espere a que se abra la compuerta. Si luego de 15 segundos no se reconoce la apertura mediante la pulsera, la apertura sera cancelada. "
            android:textColor="@color/grey"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
